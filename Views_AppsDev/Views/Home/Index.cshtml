@{
    ViewData["Title"] = "Home Page";
}
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <div class="container py-5">

        <div class="text-center mb-5">
            <h1 class="display-4 fw-bold text-primary">Information Website</h1>
            <p class="lead text-muted">
                Learn about <a href="https://learn.microsoft.com/aspnet/core" target="_blank" class="link-primary fw-semibold">building Web apps with ASP.NET Core</a>.
            </p>
        </div>

        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white fw-semibold">
                Favorite Fruits
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped table-hover mb-0">
                    <thead class="table-primary">
                        <tr>
                            <th>No.</th>
                            <th>Favorite Fruit</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr><td>1</td><td>Mango</td></tr>
                        <tr><td>2</td><td>Apple</td></tr>
                        <tr><td>3</td><td>Banana</td></tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card shadow-sm mb-4">
            <div class="card-header bg-success text-white fw-semibold">
                Tell Us About Yourself
            </div>
            <div class="card-body">
                <form>
                    <div class="mb-3">
                        <label for="subject" class="form-label">Subject:</label>
                        <input type="text" id="subject" name="subject" class="form-control" placeholder="Enter subject" />
                    </div>

                    <p class="fw-semibold">Choose your street:</p>
                    <div class="form-check">
                        <input type="checkbox" name="street1" id="street1" class="form-check-input" />
                        <label for="street1" class="form-check-label">Lovingly Yours St.</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" name="street2" id="street2" class="form-check-input" />
                        <label for="street2" class="form-check-label">Pasong Kalabaw St.</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" name="street3" id="street3" class="form-check-input" />
                        <label for="street3" class="form-check-label">Mitay St.</label>
                    </div>

                    <div class="mb-3 mt-3">
                        <label for="comment" class="form-label">About yourself:</label>
                        <textarea id="comment" name="comment" rows="4" class="form-control" placeholder="Write something about yourself..."></textarea>
                    </div>

                    <button type="submit" class="btn btn-success">Submit</button>
                </form>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-info text-white fw-semibold">
                Favorite Songs
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Blue Moon - Orange and Lemons</li>
                    <li class="list-group-item">Just Like a Splendid Love Song - Orange and Lemons</li>
                    <li class="list-group-item">Your Universe - Rico Blanco</li>
                    <li class="list-group-item">Balisong - Rico Blanco</li>
                    <li class="list-group-item">241 - Rivermaya</li>
                    <li class="list-group-item">Burnout - Sugarfree</li>
                </ul>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
